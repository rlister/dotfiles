## -*- conf -*-

## audio controls
# "pactl set-sink-volume @DEFAULT_SINK@ +1000"
"volumectl up"
  XF86AudioRaiseVolume

# "pactl set-sink-volume @DEFAULT_SINK@ -1000"
"volumectl down"
  XF86AudioLowerVolume

# "pactl set-sink-mute @DEFAULT_SINK@ toggle"
"volumectl toggle"
  XF86AudioMute

## lock screen
"slock"
  Scroll_Lock

## clipboard manager https://github.com/cdown/clipmenu/
"clipmenu -fn 'Roboto Mono-12'"
  Mod4 + y

## pass
"passmenu -fn 'Roboto Mono-12'"
  Mod4 + p

## enable trackpad
"xinput enable 11"
  Mod4 + Delete

## disable trackpad
"xinput disable 11"
  Mod4 + BackSpace

"setxkbmap -option ctrl:swapcaps"
  Mod4 + Caps_Lock

"flameshot&; flameshot gui -r | xclip -selection clipboard -t image/png; pkill flameshot"
  Mod4 + Print

"setxkbmap -option ctrl:swapcaps"
  Mod4 + z
