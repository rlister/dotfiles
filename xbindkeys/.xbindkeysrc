## -*- conf -*-

"xbindkeys_show"
  control+shift + q

## audio controls
# "pactl set-sink-volume @DEFAULT_SINK@ +1000"
"volumectl up"
  XF86AudioRaiseVolume

# "pactl set-sink-volume @DEFAULT_SINK@ -1000"
"volumectl down"
  XF86AudioLowerVolume

# "pactl set-sink-mute @DEFAULT_SINK@ toggle"
"volumectl toggle"
  XF86AudioMute

## screenshot
"maim -s | xclip -selection clipboard -t image/png"
  Print

## lock screen
"slock"
  Scroll_Lock

## clipboard manager
"clipmenu"
  Pause

## lock with dm greeter
"dm-tool switch-to-greeter"
  Mod4 + Pause
